@page "/learnBlazor/demoproduct"

<div>
    <h3 class="text-primary">Demo Product</h3>
    <p>Favourite Count: @FavouriteCount </p>
    <p>Selected Product: @SelectedProductName</p> <br/>
    <div class="p-2 mt-2">
        <div class="row">
            @foreach (var item in ProductList)
            {
                <_ProductComponent Product="@item" OnFavouriteUpdated="FavouriteCountChanged" OnProductSelected="ProductSelected" />
            }
        </div>
    </div>
</div>

@code {
    public int FavouriteCount { get; set; } = 0;
    public string SelectedProductName { get; set; }
    
        
    List<Product> ProductList = new();

    private void deleteProduct(int productId)
    {
        var prod = ProductList.FirstOrDefault(x => x.Id == productId);

        if (prod != null)
        {
            ProductList.Remove(prod);
        }
    }
    
    protected override void OnInitialized()
    {
        ProductList.Add(new()
        {
            Id = 1,
            Name = "Midnight Blaze",
            IsActive = false,
            Price = 5.99,
            ProductProperties = new List<Product_Prop>()
            {
                new Product_Prop { Id = 1, Key = "Flavor", Value = "Rose"},
                new Product_Prop { Id = 2, Key = "Size", Value = "20oz"},
                new Product_Prop { Id = 3, Key = "Color", Value="Purple" }
            }
        });

        ProductList.Add(new()
        {
            Id = 2,
            Name = "Blossom Lily",
            IsActive = true,
            Price = 10.59,
            ProductProperties = new List<Product_Prop>()
            {
                new Product_Prop { Id = 1, Key = "Flavor", Value = "Lily" },
                new Product_Prop { Id = 2, Key = "Size", Value = "18oz" },
                new Product_Prop {Id = 3,Key = "Color",Value = "White"}
            }
        });
    }

    protected void FavouriteCountChanged(bool isSelected)
    {
        if (isSelected)
        {
            FavouriteCount++;
        }
        else
        {
            FavouriteCount--;
        }
    }

    protected void ProductSelected(string productName)
    {
        SelectedProductName = productName;
    }
}